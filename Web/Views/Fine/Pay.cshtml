@model PayFineRequest
@using Application.DTOs
@using Domain.Enums

@{
    ViewData["Title"] = "Process Fine Payment";
    var fineDetails = ViewBag.FineDetails as FineDetailDto;
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 text-on-surface dark:text-on-surface-dark">
    @if (fineDetails != null)
    {
        <div class="flex justify-between items-center mb-6">
            <div>
                <h1 class="text-3xl font-bold">@ViewData["Title"]</h1>
                <p class="mt-1 text-sm text-on-surface-weak dark:text-on-surface-dark-weak">Processing payment for fine #@fineDetails.Id for member <strong>@fineDetails.MemberName</strong>.</p>
            </div>
            <a asp-action="Details" asp-controller="Fine" asp-route-id="@fineDetails.Id" class="inline-flex items-center justify-center rounded-md border border-outline px-4 py-2 text-sm font-medium shadow-sm hover:bg-white/5">
                ← Cancel and Back to Fine Details
            </a>
        </div>

        <hr class="border-outline dark:border-outline-dark mb-8" />
        
        <form asp-action="Pay" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="FineId" />

            <div class="flex flex-col lg:flex-row gap-8">
                <div class="lg:w-7/12">
                    <div class="bg-surface-alt dark:bg-surface-dark-alt shadow-md rounded-lg p-6">
                        <h2 class="text-xl font-semibold mb-6">Payment Details</h2>

                         @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-100 text-red-800 border border-red-300 rounded-md" role="alert"></div>
                        }
                        
                        <div class="space-y-6">
                             <div>
                                <label asp-for="PaymentAmount" class="block text-sm font-medium mb-1">Payment Amount</label>
                                <div class="relative mt-1">
                                    <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-4">
                                        <span class="text-on-surface-weak dark:text-on-surface-dark-weak sm:text-sm">$</span>
                                     </div>
                                    <input asp-for="PaymentAmount" type="number" step="0.01" class="block w-full rounded-md border border-outline bg-surface-alt pl-8 pr-4 py-2 text-sm focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary dark:border-outline-dark dark:bg-surface-dark-alt/50" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="PaymentAmount" class="mt-1 text-sm text-red-500"></span>
                                <p class="mt-2 text-xs text-on-surface-weak dark:text-on-surface-dark-weak">Enter the amount received. For partial payments, the remaining balance will become a new fine.</p>
                            </div>
                            
                            <div>
                                <label asp-for="PaymentMethod" class="block text-sm font-medium mb-1">Payment Method</label>
                                <div class="relative w-full">
                                    <select asp-for="PaymentMethod" asp-items="Html.GetEnumSelectList<PaymentMethod>()"
                                            class="peer w-full appearance-none rounded-md border border-outline bg-surface-alt px-4 py-2 text-sm transition focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary dark:border-outline-dark dark:bg-surface-dark-alt/50">
                                    </select>
                                    <svg class="pointer-events-none absolute right-3 top-1/2 h-4 w-4 -translate-y-1/2 text-on-surface/50 dark:text-on-surface-dark/50" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                                    </svg>
                                </div>
                                <span asp-validation-for="PaymentMethod" class="mt-1 text-sm text-red-500"></span>
                            </div>
                            
                            <div>
                                <label asp-for="PaymentReference" class="block text-sm font-medium mb-1">Payment Reference (Optional)</label>
                                <input asp-for="PaymentReference" type="text" class="w-full rounded-md border border-outline bg-surface-alt px-4 py-2 text-sm focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary dark:border-outline-dark dark:bg-surface-dark-alt/50" placeholder="e.g., Receipt #12345, CC Transaction ID" />
                                <span asp-validation-for="PaymentReference" class="mt-1 text-sm text-red-500"></span>
                            </div>

                             <div>
                                <label asp-for="Notes" class="block text-sm font-medium mb-1">Notes (Optional)</label>
                                <textarea asp-for="Notes" rows="3" class="w-full rounded-md border border-outline bg-surface-alt px-4 py-2 text-sm focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary dark:border-outline-dark dark:bg-surface-dark-alt/50" placeholder="Any additional notes about this payment..."></textarea>
                                <span asp-validation-for="Notes" class="mt-1 text-sm text-red-500"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="lg:w-5/12">
                    <div class="bg-surface-alt dark:bg-surface-dark-alt shadow-md rounded-lg p-6 sticky top-8">
                        <h2 class="text-xl font-semibold mb-4">Fine Summary</h2>
                         <div class="space-y-3 text-sm">
                            <div class="flex justify-between">
                                <span class="font-medium text-on-surface-weak dark:text-on-surface-dark-weak">Total Fine Amount:</span>
                                <span class="text-lg font-bold">@fineDetails.Amount.ToString("C")</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="font-medium text-on-surface-weak dark:text-on-surface-dark-weak">Member Name:</span>
                                <span>@fineDetails.MemberName</span>
                            </div>
                             <div class="flex justify-between">
                                <span class="font-medium text-on-surface-weak dark:text-on-surface-dark-weak">Date Issued:</span>
                                <span>@fineDetails.FineDate.ToString("dd MMM, yyyy")</span>
                            </div>
                            <div class="sm:col-span-2 pt-2">
                                <dt class="font-medium text-on-surface-weak dark:text-on-surface-dark-weak">Reason:</dt>
                                <dd class="mt-1 whitespace-pre-wrap">@fineDetails.Description</dd>
                            </div>
                         </div>
                    </div>
                </div>
            </div>

             <div class="mt-8 flex justify-end">
                <button type="submit" class="inline-flex items-center justify-center rounded-md border border-transparent bg-green-600 px-6 py-3 text-sm font-medium text-white shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
                    <i class="bi bi-check-circle-fill mr-2"></i> Confirm Payment
                </button>
            </div>
        </form>
    }
    else
    {
         <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md relative text-center" role="alert">
            <strong class="font-bold">Error!</strong>
            <p>Could not load the fine details to process a payment.</p>
             <div class="mt-4">
                 <a asp-action="Index" class="font-bold text-red-800 hover:underline">Return to Fine Management</a>
             </div>
        </div>
    }
</div>