@model Application.DTOs.FineDto
@{
    ViewData["Title"] = "Fine Details";
}
<h2>Fine Details</h2>
<dl class="row">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>
    <dt class="col-sm-2">Amount</dt>
    <dd class="col-sm-10">@Model.Amount.ToString("C")</dd>
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.FineDate.ToShortDateString()</dd>
    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>
    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10">@Model.Type</dd>
    <dt class="col-sm-2">Member</dt>
    <dd class="col-sm-10">@Model.MemberName</dd>
    <dt class="col-sm-2">Loan Id</dt>
    <dd class="col-sm-10">@Model.LoanId</dd>
</dl>
<a asp-action="Index" class="btn btn-secondary">Back to List</a> 