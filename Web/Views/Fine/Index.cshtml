@model Application.Common.PagedResult<Application.DTOs.FineDto>
@{
    ViewData["Title"] = "Fine History";
}
<h2>Fine History</h2>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Date</th>
            <th>Status</th>
            <th>Type</th>
            <th>Member</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var fine in Model.Items)
    {
        <tr>
            <td>@fine.Id</td>
            <td>@fine.Amount.ToString("C")</td>
            <td>@fine.Description</td>
            <td>@fine.FineDate.ToShortDateString()</td>
            <td>@fine.Status</td>
            <td>@fine.Type</td>
            <td>@fine.MemberName</td>
            <td>
                <a asp-action="Details" asp-route-id="@fine.Id">Details</a>
                @if (fine.Status == Domain.Enums.FineStatus.Pending)
                {
                    <form asp-action="Pay" asp-route-id="@fine.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-success">Pay</button>
                    </form>
                    <form asp-action="Waive" asp-route-id="@fine.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-warning">Waive</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
<!-- Minimal pagination controls -->
<div>
    Page @Model.PageNumber of @((Model.TotalCount + Model.PageSize - 1) / Model.PageSize)
    @if (Model.PageNumber > 1)
    {
        <a asp-action="Index" asp-route-page="@(Model.PageNumber - 1)">Previous</a>
    }
    @if (Model.PageNumber * Model.PageSize < Model.TotalCount)
    {
        <a asp-action="Index" asp-route-page="@(Model.PageNumber + 1)">Next</a>
    }
</div>
<a asp-action="Create" class="btn btn-primary">Create Fine</a> 