@model Application.DTOs.NotificationDto
@{
    ViewData["Title"] = "Notification Details";
}
<h2>Notification Details</h2>
<dl class="row">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>
    <dt class="col-sm-2">Subject</dt>
    <dd class="col-sm-10">@Model.Subject</dd>
    <dt class="col-sm-2">Message</dt>
    <dd class="col-sm-10">@Model.Message</dd>
    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10">@Model.Type</dd>
    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>
    <dt class="col-sm-2">Sent At</dt>
    <dd class="col-sm-10">@(Model.SentAt?.ToString("g") ?? "-")</dd>
    <dt class="col-sm-2">User</dt>
    <dd class="col-sm-10">@Model.UserName</dd>
</dl>
<a asp-action="Index" class="btn btn-secondary">Back to List</a> 