@model List<Application.DTOs.NotificationListDto>
@{
    ViewData["Title"] = "Notifications";
}
<h2>Notifications</h2>
<form asp-action="MarkAsRead" method="post">
    <button type="submit" class="btn btn-primary">Mark All as Read</button>
    <input type="hidden" name="NotificationIds" value="@string.Join(",", Model.Where(n => !n.IsRead).Select(n => n.Id))" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Message</th>
            <th>Status</th>
            <th>Sent At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var notification in Model)
        {
            <tr class="@(notification.IsRead ? "" : "table-warning")">
                <td>@notification.Subject</td>
                <td>@notification.Message</td>
                <td>@notification.Status @(notification.IsRead ? "(Read)" : "<span class='badge bg-warning'>Unread</span>")</td>
                <td>@notification.SentAt?.ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@notification.Id" class="btn btn-sm btn-info">Details</a>
                    @if (!notification.IsRead)
                    {
                        <form asp-action="MarkAsRead" method="post" style="display:inline;">
                            <input type="hidden" name="NotificationIds" value="@notification.Id" />
                            <button type="submit" class="btn btn-sm btn-success">Mark as Read</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table> 