@model Application.Common.PagedResult<Application.DTOs.NotificationDto>
@{
    ViewData["Title"] = "Notifications";
}
<h2>Notifications</h2>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Subject</th>
            <th>Message</th>
            <th>Type</th>
            <th>Status</th>
            <th>Sent At</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var n in Model.Items)
    {
        <tr>
            <td>@n.Id</td>
            <td>@n.Subject</td>
            <td>@n.Message</td>
            <td>@n.Type</td>
            <td>@n.Status</td>
            <td>@(n.SentAt?.ToString("g") ?? "-")</td>
            <td>@n.UserName</td>
            <td>
                <a asp-action="Details" asp-route-id="@n.Id">Details</a>
                @if (n.Status != Domain.Enums.NotificationStatus.Read)
                {
                    <form asp-action="MarkAsRead" asp-route-id="@n.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-success">Mark as Read</button>
                    </form>
                }
                <form asp-action="Delete" asp-route-id="@n.Id" method="post" style="display:inline">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
<!-- Minimal pagination controls -->
<div>
    Page @Model.PageNumber of @((Model.TotalCount + Model.PageSize - 1) / Model.PageSize)
    @if (Model.PageNumber > 1)
    {
        <a asp-action="Index" asp-route-page="@(Model.PageNumber - 1)">Previous</a>
    }
    @if (Model.PageNumber * Model.PageSize < Model.TotalCount)
    {
        <a asp-action="Index" asp-route-page="@(Model.PageNumber + 1)">Next</a>
    }
</div>
<a asp-action="Create" class="btn btn-primary">Create Notification</a>
<form asp-action="MarkAllAsRead" method="post" style="display:inline">
    <button type="submit" class="btn btn-warning">Mark All as Read</button>
</form> 