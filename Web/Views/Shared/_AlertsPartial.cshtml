@if (TempData.TryGetValue("SuccessMessage", out var successMessage))
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline">@successMessage</span>
    </div>
}

@if (TempData.TryGetValue("ErrorMessage", out var errorMessage))
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline">@errorMessage</span>
    </div>
}

@if (TempData.TryGetValue("WarningMessage", out var warningMessage))
{
    <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline">@warningMessage</span>
    </div>
}

@if (TempData.TryGetValue("InfoMessage", out var infoMessage))
{
    <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline">@infoMessage</span>
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <div asp-validation-summary="All" class="text-red-700"></div>
    </div>
}