@if (TempData.TryGetValue("SuccessMessage", out var successMessage))
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline">@successMessage</span>
    </div>
}

@if (TempData.TryGetValue("ErrorMessage", out var errorMessage))
{
    <div class="mb-4 relative w-full overflow-hidden rounded-sm border border-red-500 bg-surface text-on-surface dark:bg-surface-dark dark:text-on-surface-dark"
        role="alert">
        <div class="flex w-full items-center gap-2 bg-danger/10 p-4">
            <div class="bg-red-500/15 text-red-500 rounded-full p-1" aria-hidden="true">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-6"
                    aria-hidden="true">
                    <path fill-rule="evenodd"
                        d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16ZM8.28 7.22a.75.75 0 0 0-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 1 0 1.06 1.06L10 11.06l1.72 1.72a.75.75 0 1 0 1.06-1.06L11.06 10l1.72-1.72a.75.75 0 0 0-1.06-1.06L10 8.94 8.28 7.22Z"
                        clip-rule="evenodd" />
                </svg>
            </div>
            <div class="ml-2">
                <h3 class="text-sm font-semibold">@errorMessage</h3>
            </div>
        </div>
    </div>
}

@if (TempData.TryGetValue("WarningMessage", out var warningMessage))
{
    <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline">@warningMessage</span>
    </div>
}

@if (TempData.TryGetValue("InfoMessage", out var infoMessage))
{
    <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline">@infoMessage</span>
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <div asp-validation-summary="All" class="text-red-700"></div>
    </div>
}