@if (!ViewData.ModelState.IsValid)
{
    <div class="mb-4 relative w-full overflow-hidden rounded-radius border border-red-500 bg-surface text-on-surface"
        role="alert">
        <div class="flex w-full items-center gap-2 bg-danger/10 p-4">
            <div>
                <div asp-validation-summary="All" class="text-sm font-semibold"></div>
            </div>
        </div>
    </div>
}