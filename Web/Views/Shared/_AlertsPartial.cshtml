@if (TempData.TryGetValue("SuccessMessage", out var successMessage))
{
    <!-- Success Alert -->
    <div class="mb-4 relative w-full overflow-hidden rounded-radius border border-green-500 bg-surface text-on-surface"
        role="alert">
        <div class="flex w-full items-center gap-2 bg-success/10 p-4">
            <div class="bg-green-500/15 text-green-500 rounded-full p-1" aria-hidden="true">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-6"
                    aria-hidden="true">
                    <path fill-rule="evenodd"
                        d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm3.857-9.809a.75.75 0 0 0-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 1 0-1.06 1.061l2.5 2.5a.75.75 0 0 0 1.137-.089l4-5.5Z"
                        clip-rule="evenodd" />
                </svg>
            </div>
            <div class="ml-2">
                <h3 class="text-sm font-semibold">@successMessage</h3>
            </div>
        </div>
    </div>
}

