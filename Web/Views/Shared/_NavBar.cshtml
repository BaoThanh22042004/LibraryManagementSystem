@using Microsoft.AspNetCore.Http
@using Application.DTOs
@using Domain.Enums
@inject IHttpContextAccessor HttpContextAccessor

@{
    var user = HttpContextAccessor.HttpContext?.User;
    bool isAuthenticated = user?.Identity?.IsAuthenticated == true;
    bool isStaff = user?.IsInRole("Admin") == true || user?.IsInRole("Librarian") == true;
    string? userName = user?.Identity?.Name;
    string userInitial = !string.IsNullOrWhiteSpace(userName) ? userName.Trim()[0].ToString().ToUpper() : "?";
    string userRole = user?.IsInRole("Admin") == true ? "Admin" : (user?.IsInRole("Librarian") == true ? "Librarian" : "");
}

<nav x-data="{ mobileMenuIsOpen: false, userMenuOpen: false, notifMenuOpen: false }"
     x-on:click.away="mobileMenuIsOpen = false; userMenuOpen = false; notifMenuOpen = false"
     class="sticky top-0 z-50 flex items-center justify-between bg-surface-alt border-b border-outline px-6 py-4 dark:border-outline-dark dark:bg-surface-dark-alt backdrop-blur-sm bg-opacity-90 dark:bg-opacity-90"
     aria-label="ui menu">
    <!-- Brand Logo -->
    @if(isStaff)
    {
        <a href="@Url.Action("Dashboard", "Home")" class="text-2xl font-bold text-on-surface-strong dark:text-on-surface-dark-strong flex items-center">
            <span>
                Library<span class="text-primary dark:text-primary-dark">Sys</span>
            </span>
        </a>
    }
    else
    {
        <a href="/" class="text-2xl font-bold text-on-surface-strong dark:text-on-surface-dark-strong flex items-center">
            <span>
                Library<span class="text-primary dark:text-primary-dark">App</span>
            </span>
        </a>
    }
        <div class="flex-1"></div>

    <!-- Right: Notification + User/Profile menu -->
    <div class="flex items-center gap-4">
        @if (isAuthenticated && !isStaff)
        {
            <!-- Notification Bell -->
            <a href="@Url.Action("MyNotifications", "Notification")"
               class="relative flex items-center justify-center w-10 h-10 rounded-full hover:bg-surface-alt dark:hover:bg-surface-dark-alt focus:outline-none focus:ring-2 focus:ring-primary"
               aria-label="Notifications">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 text-on-surface dark:text-on-surface-dark">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                </svg>
                <span id="notif-badge"
                      class="absolute -top-1 -right-1 min-w-5 h-5 px-1 rounded-full bg-red-600 text-xs text-white font-bold flex items-center justify-center"
                      style="display:none;">
                    0
                </span>
            </a>
        }
        @if (!isAuthenticated)
        {
            <a class="font-medium text-on-surface hover:text-primary focus:outline-none focus:text-primary-dark dark:text-on-surface-dark dark:hover:text-primary-dark transition-colors"
               asp-controller="Auth" asp-action="Login">
                Login
            </a>
            <a class="font-medium text-primary border-2 border-primary px-4 py-2 rounded-radius hover:bg-primary hover:text-on-primary transition-all focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 dark:border-primary-dark dark:text-primary-dark dark:hover:bg-primary-dark dark:hover:text-on-primary-dark"
               asp-controller="Auth" asp-action="Register">
                Sign Up
            </a>
        }
        else
        {
            <div class="relative group" x-data="{ userMenuOpen: false }"
                 x-on:mouseenter="userMenuOpen = true" x-on:mouseleave="userMenuOpen = false">
                <button x-on:click="userMenuOpen = !userMenuOpen"
                        class="flex items-center gap-2 font-medium text-on-surface rounded-radius px-2 py-1 hover:bg-surface-alt dark:text-on-surface-dark dark:hover:bg-surface-dark-alt focus:outline-none focus:ring-2 focus:ring-primary dark:focus:ring-primary-dark transition-all"
                        aria-haspopup="true" :aria-expanded="userMenuOpen"
                        type="button">
                    <span class="w-8 h-8 flex items-center justify-center rounded-full bg-primary text-white font-bold text-lg">
                        @userInitial
                    </span>
                    @if (isStaff)
                    {
                        <span class="text-sm font-medium">Hello, @userRole</span>
                    }
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </button>
                <ul x-cloak x-show="userMenuOpen"
                    x-transition
                    class="absolute right-0 mt-2 w-56 bg-white dark:bg-surface-dark-alt border border-outline dark:border-outline-dark rounded shadow-lg z-20 py-2">
                    @if (!isStaff)
                    {
                        <li class="px-4 py-2 text-sm text-gray-500 dark:text-gray-300 border-b border-outline dark:border-outline-dark select-none">
                            Hello, <span class="font-semibold text-on-surface dark:text-on-surface-dark">@userName</span>
                        </li>
                        <li>
                            <a class="block px-4 py-2 text-on-surface hover:bg-primary hover:text-white dark:text-on-surface-dark dark:hover:bg-primary-dark rounded"
                               asp-controller="Profile" asp-action="Index">
                                My Profile
                            </a>
                        </li>
                        <li>
                            <a class="block px-4 py-2 text-on-surface hover:bg-primary hover:text-white dark:text-on-surface-dark dark:hover:bg-primary-dark rounded"
                               asp-controller="Fine" asp-action="MyFines">
                                My Fines
                            </a>
                        </li>
                        <li>
                            <a class="block px-4 py-2 text-on-surface hover:bg-primary hover:text-white dark:text-on-surface-dark dark:hover:bg-primary-dark rounded"
                               asp-controller="Reservation" asp-action="MyReservations">
                                My Reservations
                            </a>
                        </li>
                    }
                    <li>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                            <button type="submit" class="w-full text-left px-4 py-2 text-on-surface hover:bg-red-500 hover:text-white dark:text-on-surface-dark dark:hover:bg-red-600 rounded">
                                Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        }
    </div>
</nav>
