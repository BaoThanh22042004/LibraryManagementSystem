@model Web.Models.ErrorViewModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Error";
}

@{
    var user = HttpContextAccessor.HttpContext?.User;
    bool isStaff = user?.IsInRole("Admin") == true || user?.IsInRole("Librarian") == true;
}

<div class="flex flex-col items-center justify-center py-16 text-center">

    <!-- Error Icon -->
    <div class="flex items-center justify-center w-20 h-20 rounded-full bg-red-100 dark:bg-red-900/50 mb-6">
        <svg class="w-12 h-12 text-red-500 dark:text-red-400"
             xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
        </svg>
    </div>

    <!-- Error Title -->
    <h1 class="text-4xl font-bold text-on-surface-strong dark:text-on-surface-dark-strong">
        An Unexpected Error Occurred
    </h1>

    <!-- User-friendly Message -->
    <p class="mt-4 text-lg text-on-surface-weak dark:text-on-surface-dark-weak max-w-2xl">
        We apologize for the inconvenience. Our team has been notified of the issue.
        Please try again later or return to the homepage.
    </p>

    <!-- Call to Action Button -->
    <div class="mt-10">
        @{
            var homeAction = isStaff ? "Dashboard" : "Index";
            var brandName = isStaff ? "LibrarySys" : "LibraryApp";
        }

        <a asp-controller="Home" asp-action="@homeAction"
           class="inline-flex items-center px-6 py-3 bg-primary text-white rounded-radius font-semibold shadow-md hover:bg-primary-dark transition focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Return to Homepage
        </a>
    </div>

    <!--
        Developer Information: This section will only be displayed
        in the Development environment.
    -->
    @if (Model.ShowRequestId)
    {
        <div class="mt-12 w-full max-w-2xl p-4 bg-surface-alt dark:bg-surface-dark-alt border border-outline dark:border-outline-dark rounded-lg">
            <h3 class="text-lg font-semibold text-on-surface dark:text-on-surface-dark">
                Developer Details
            </h3>
            <p class="mt-2 text-sm text-on-surface-weak dark:text-on-surface-dark-weak">
                This ID can help our team track down the specific error you encountered.
            </p>
            <div class="mt-3 text-sm text-left bg-surface dark:bg-surface-dark p-3 rounded font-mono break-all">
                <strong class="text-red-500">Request ID:</strong> <code>@Model.RequestId</code>
            </div>
        </div>
    }

</div>