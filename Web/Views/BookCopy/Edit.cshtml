@model Application.DTOs.UpdateBookCopyDto
@{
    ViewData["Title"] = "Edit Book Copy";
    var bookTitle = ViewBag.BookTitle as string;
    var bookId = ViewBag.BookId as int?;
}

<div class="container mx-auto">
    <div class="bg-surface-alt dark:bg-surface-dark-alt border border-outline dark:border-outline-dark rounded-radius shadow-md overflow-hidden">
        <div class="bg-primary dark:bg-primary-dark text-on-primary dark:text-on-primary-dark p-4">
            <h1 class="text-xl font-bold">Edit Book Copy</h1>
        </div>
        <div class="p-6">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <!-- Book Information Display -->
                @if (!string.IsNullOrEmpty(bookTitle))
                {
                    <div class="bg-surface dark:bg-surface-dark border border-outline dark:border-outline-dark rounded-radius p-4 mb-6">
                        <h3 class="font-semibold text-on-surface-strong dark:text-on-surface-dark-strong mb-2">Book Information</h3>
                        <p class="text-on-surface dark:text-on-surface-dark">@bookTitle</p>
                    </div>
                }

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Left Column -->
                    <div>
                        <div class="mb-4">
                            <label asp-for="CopyNumber" class="block text-on-surface-strong dark:text-on-surface-dark-strong font-medium mb-1">Copy Number</label>
                            <input asp-for="CopyNumber" class="w-full rounded-radius border border-outline dark:border-outline-dark px-4 py-2 focus:border-primary dark:focus:border-primary-dark focus:outline-none bg-surface dark:bg-surface-dark text-on-surface-strong dark:text-on-surface-dark-strong" />
                            <span asp-validation-for="CopyNumber" class="text-danger text-sm"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Status" class="block text-on-surface-strong dark:text-on-surface-dark-strong font-medium mb-1">Status</label>
                            <select asp-for="Status" asp-items="Html.GetEnumSelectList<Domain.Enums.CopyStatus>()" class="w-full rounded-radius border border-outline dark:border-outline-dark px-4 py-2 focus:border-primary dark:focus:border-primary-dark focus:outline-none bg-surface dark:bg-surface-dark text-on-surface-strong dark:text-on-surface-dark-strong">
                            </select>
                            <span asp-validation-for="Status" class="text-danger text-sm"></span>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div>
                        <div class="bg-surface dark:bg-surface-dark border border-outline dark:border-outline-dark rounded-radius p-4">
                            <h3 class="font-semibold text-on-surface-strong dark:text-on-surface-dark-strong mb-3">Status Information</h3>
                            <div class="space-y-3 text-sm">
                                <div class="flex items-center">
                                    <div class="w-3 h-3 bg-green-500 rounded-full mr-3"></div>
                                    <div>
                                        <span class="font-medium text-on-surface-strong dark:text-on-surface-dark-strong">Available</span>
                                        <p class="text-on-surface dark:text-on-surface-dark">Copy can be borrowed</p>
                                    </div>
                                </div>
                                <div class="flex items-center">
                                    <div class="w-3 h-3 bg-blue-500 rounded-full mr-3"></div>
                                    <div>
                                        <span class="font-medium text-on-surface-strong dark:text-on-surface-dark-strong">Borrowed</span>
                                        <p class="text-on-surface dark:text-on-surface-dark">Copy is currently on loan</p>
                                    </div>
                                </div>
                                <div class="flex items-center">
                                    <div class="w-3 h-3 bg-yellow-500 rounded-full mr-3"></div>
                                    <div>
                                        <span class="font-medium text-on-surface-strong dark:text-on-surface-dark-strong">Reserved</span>
                                        <p class="text-on-surface dark:text-on-surface-dark">Copy is reserved for a member</p>
                                    </div>
                                </div>
                                <div class="flex items-center">
                                    <div class="w-3 h-3 bg-red-500 rounded-full mr-3"></div>
                                    <div>
                                        <span class="font-medium text-on-surface-strong dark:text-on-surface-dark-strong">Damaged/Lost</span>
                                        <p class="text-on-surface dark:text-on-surface-dark">Copy is unavailable due to condition</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-radius p-4">
                            <div class="flex">
                                <svg class="w-5 h-5 text-yellow-400 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                </svg>
                                <div>
                                    <h4 class="text-sm font-medium text-yellow-800 dark:text-yellow-200">Important</h4>
                                    <p class="text-sm text-yellow-700 dark:text-yellow-300 mt-1">
                                        Changing the status to "Damaged" or "Lost" will make this copy unavailable for borrowing.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="flex justify-between mt-6">
                    <a asp-controller="Book" asp-action="Details" asp-route-id="@bookId" class="rounded-radius border border-outline dark:border-outline-dark px-4 py-2 text-sm font-medium hover:bg-surface-alt dark:hover:bg-surface-dark-alt text-on-surface-strong dark:text-on-surface-dark-strong">
                        Back to Book
                    </a>
                    <input type="submit" value="Save Changes" class="rounded-radius bg-primary dark:bg-primary-dark text-on-primary dark:text-on-primary-dark px-4 py-2 text-sm font-medium hover:opacity-75 cursor-pointer" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 