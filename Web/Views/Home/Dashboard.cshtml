@model Application.DTOs.DashboardStatsDto
@{
    ViewData["Title"] = "Dashboard";
}

@if (Model == null)
{
    <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 rounded mb-6">
        Insufficient data for statistics.
    </div>
    return;
}

<div class="max-w-7xl mx-auto px-4 py-8">
    <h2 class="text-2xl font-bold text-on-surface-strong">
        Library <span class="text-primary">Dashboard</span>
        </h2>
    
    @await Html.PartialAsync("_AlertsPartial")

    <div class="flex items-center gap-2 mb-8">
        <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <div class="flex items-center gap-2">
            <span class="text-xs sm:text-sm font-medium text-primary">Last updated:</span>
            <span class="text-xs sm:text-sm font-medium text-on-surface-weak bg-surface-alt px-3 py-1 rounded-radius shadow">
                @Model.StatsGeneratedAt.ToString("g")
            </span>
        </div>
    </div>

    <div class="bg-blue-50 border-l-4 border-blue-400 p-4 rounded-lg flex items-start gap-4 mb-8">
        <div class="flex-shrink-0">
            <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
        </div>
        <div>
            <div class="flex items-baseline gap-3">
                <span class="text-3xl font-bold text-on-surface-strong">@Model.TotalBookCopies</span>
                <h3 class="text-lg font-semibold text-on-surface">Total Book Copies</h3>
            </div>
            <p class="text-sm text-on-surface-weak mt-1">
                This is the total number of physical book copies available in the library across all titles.
            </p>
        </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <a href="@Url.Action("Index", "User")" class="block bg-primary text-white rounded-lg shadow-lg hover:shadow-xl transition p-6 group">
            <div class="font-semibold text-lg mb-2">Members</div>
            <div class="text-3xl font-bold mb-1">@Model.TotalMembers</div>
            <div class="text-xs opacity-70">Total registered members</div>
        </a>
        <a href="@Url.Action("Index", "Book")" class="block bg-green-600 text-white rounded-lg shadow-lg hover:shadow-xl transition p-6 group">
            <div class="font-semibold text-lg mb-2">Books</div>
            <div class="text-3xl font-bold mb-1">@Model.TotalBooks</div>
            <div class="text-xs opacity-70">Total books in library</div>
        </a>
        <a href="@Url.Action("Index", "Category")" class="block bg-indigo-500 text-white rounded-lg shadow-lg hover:shadow-xl transition p-6 group">
            <div class="font-semibold text-lg mb-2">Categories</div>
            <div class="text-3xl font-bold mb-1">@Model.TotalCategories</div>
            <div class="text-xs opacity-70">Total book categories</div>
        </a>
        <a href="@Url.Action("Index", "Loan")" class="block bg-yellow-400 text-white rounded-lg shadow-lg hover:shadow-xl transition p-6 group">
            <div class="font-semibold text-lg mb-2">Active Loans</div>
            <div class="text-3xl font-bold mb-1">@Model.ActiveLoans</div>
            <div class="text-xs opacity-70">Currently borrowed books</div>
        </a>
        <a href="@Url.Action("OverdueReport", "Loan")" class="block bg-red-500 text-white rounded-lg shadow-lg hover:shadow-xl transition p-6 group">
            <div class="font-semibold text-lg mb-2">Overdue Loans</div>
            <div class="text-3xl font-bold mb-1">@Model.OverdueLoans</div>
            <div class="text-xs opacity-70">Loans past due date</div>
        </a>
        <a href="@Url.Action("Index", "Fine")" class="block bg-gray-500 text-white rounded-lg shadow-lg hover:shadow-xl transition p-6 group">
            <div class="font-semibold text-lg mb-2">Pending Fines</div>
            <div class="text-3xl font-bold mb-1">@Model.PendingFines</div>
            <div class="text-xs opacity-70">Unpaid fines</div>
        </a>
        <a href="@Url.Action("Index", "Reservation")" class="block bg-gray-800 text-white rounded-lg shadow-lg hover:shadow-xl transition p-6 group">
            <div class="font-semibold text-lg mb-2">Reservations</div>
            <div class="text-3xl font-bold mb-1">@Model.Reservations</div>
            <div class="text-xs opacity-70">Active reservations</div>
        </a>
        <a href="@Url.Action("Index", "Notification")" class="block bg-primary text-white rounded-lg shadow-lg hover:shadow-xl transition p-6 group">
            <div class="font-semibold text-lg mb-2">Notifications Sent</div>
            <div class="text-3xl font-bold mb-1">@Model.NotificationsSent</div>
            <div class="text-xs opacity-70">Total notifications sent</div>
        </a>
        <a href="@Url.Action("Index", "Reports")" class="block bg-cyan-600 text-white rounded-lg shadow-lg hover:shadow-xl transition p-6 group">
            <div class="font-semibold text-lg mb-2">Reports</div>
            <div class="text-3xl font-bold mb-1">
                <svg class="inline w-8 h-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 17v-2a2 2 0 012-2h2a2 2 0 012 2v2m-6 4h6a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
            </div>
            <div class="text-xs opacity-70">View and export reports</div>
        </a>
    </div>
</div>