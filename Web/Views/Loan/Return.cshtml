@model ReturnBookRequest
@{
    ViewData["Title"] = "Return Book";
}

<h2 class="text-3xl font-bold mb-6">Return Book</h2>

@await Html.PartialAsync("_AlertsPartial")

<div class="bg-white shadow-md rounded-lg overflow-hidden p-6 mb-7">
    <form asp-action="Return" method="post">
        <input type="hidden" asp-for="@Model.LoanId"/>
        <div class="space-y-6">
            <div>
                <label asp-for="LoanId" class="block text-gray-700 text-base font-bold mb-2">Loan Id</label>
                <div class="w-full px-3 py-2 border border-gray-300 rounded-md">@Model.LoanId</div>
            </div>
            <div>
                <label asp-for="BookCondition" class="block text-gray-700 text-base font-bold mb-2">Book Condition</label>
                <select asp-for="BookCondition" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    <option value="@Application.DTOs.BookCondition.Good">Good</option>
                    <option value="@Application.DTOs.BookCondition.Damaged">Damaged</option>
                    <option value="@Application.DTOs.BookCondition.Lost">Lost</option>
                </select>
                <span asp-validation-for="BookCondition" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="Notes" class="block text-gray-700 text-base font-bold mb-2">Notes</label>
                <textarea asp-for="Notes" type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                          placeholder="Enter notes here..."></textarea>
                <span asp-validation-for="Notes" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Submit
                </button>
            </div>
        </div>
    </form>
</div>

<button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
    <a asp-action="Details" asp-route-id="@Model.LoanId">
        Back to Details
    </a>
</button>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
