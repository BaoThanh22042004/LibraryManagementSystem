@model Application.DTOs.ExtendLoanDto
@{
    ViewData["Title"] = "Extend Loan";
}
<h2>Extend Loan</h2>
<form asp-action="Extend" method="post">
    <input type="hidden" asp-for="LoanId" />
    <div class="form-group">
        <label asp-for="NewDueDate"></label>
        <input asp-for="NewDueDate" class="form-control" type="date" />
        <span asp-validation-for="NewDueDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Extend</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form> 