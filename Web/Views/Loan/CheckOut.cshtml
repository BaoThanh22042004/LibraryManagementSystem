@model CreateLoanRequest
@{
    ViewData["Title"] = "Check Out";
}
<h2 class="text-3xl font-bold mb-6">Check Out</h2>

@await Html.PartialAsync("_AlertsPartial")

<div class="bg-white shadow-md rounded-lg overflow-hidden p-6 mb-7">
    <form asp-action="CheckOut" method="post">
        <div class="space-y-6">
            <div>
                <label asp-for="MemberId" class="block text-gray-700 text-base font-bold mb-2">Member Id<span class="text-red-600">*</span></label>
                <input asp-for="MemberId" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                       placeholder="Enter member id">
                <span asp-validation-for="MemberId" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="BookCopyId" class="block text-gray-700 text-base font-bold mb-2">Book Copy Id<span class="text-red-600">*</span></label>
                <input asp-for="BookCopyId" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                       placeholder="Enter book copy id">
                <span asp-validation-for="BookCopyId" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="CustomDueDate" class="block text-gray-700 text-base font-bold mb-2">Customer Due Date</label>
                <input asp-for="CustomDueDate" type="datetime-local" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                       placeholder="Enter customer due date" />
                <span asp-validation-for="CustomDueDate" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="Notes" class="block text-gray-700 text-base font-bold mb-2">Notes</label>
                <textarea asp-for="Notes" type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                          placeholder="Enter notes here..."></textarea>
                <span asp-validation-for="Notes" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Submit
                </button>
            </div>
        </div>
    </form>
</div>

<button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
    <a asp-action="Index">
        Back to List
    </a>
</button>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
