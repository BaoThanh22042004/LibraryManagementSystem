@model ProfileDto
@{
    ViewData["Title"] = "My Profile";
}

<div class="max-w-5xl mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <div class="flex space-x-2">
            <a asp-action="Edit" class="inline-flex items-center px-3 py-1.5 text-sm font-bold text-white bg-blue-600 hover:bg-blue-700 rounded-md transition">
                Edit
            </a>
            <a asp-controller="Auth" asp-action="ChangePassword" class="inline-flex items-center px-3 py-1.5 text-sm font-bold text-white bg-green-600 hover:bg-blue-700 rounded-md transition">
                Change Password
            </a>
        </div>
    </div>

    @await Html.PartialAsync("_AlertsPartial")

    <div class="overflow-hidden w-full overflow-x-auto rounded-radius border border-gray-700">
        <div class="px-6 py-4  flex justify-between items-center">
            <h5 class="text-lg font-bold ">Personal Information</h5>
        </div>
        <div class="p-6 space-y-4 bg-surface-alt border border-gray-700 rounded-radius">
            <div class="flex">
                <div class="w-1/3 font-bold">Full Name:</div>
                <div class="w-2/3">@Model.FullName</div>
            </div>
            <div class="flex items-center">
                <div class="w-1/3 font-bold">Email Address:</div>
                <div class="w-2/3">
                    @Model.Email
                    @if (!string.IsNullOrEmpty(Model.PendingEmail))
                    {
                        <span class="ml-2 inline-block bg-yellow-100 text-yellow-800 text-xs font-semibold px-2 py-1 rounded">
                            Pending verification: @Model.PendingEmail
                        </span>
                    }
                </div>
            </div>
            <div class="flex">
                <div class="w-1/3 font-bold">Phone Number:</div>
                <div class="w-2/3">
                    @(string.IsNullOrEmpty(Model.Phone) ? "Not provided" : Model.Phone)
                </div>
            </div>
            <div class="flex">
                <div class="w-1/3 font-bold">Address:</div>
                <div class="w-2/3">
                    @if (string.IsNullOrEmpty(Model.Address))
                    {
                        <span>Not provided</span>
                    }
                    else
                    {
                        <span>@Model.Address</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
