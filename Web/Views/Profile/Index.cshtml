@model ProfileDto
@{
    ViewData["Title"] = "My Profile";
}

<div class="max-w-5xl mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <div class="flex space-x-2">
            <a asp-action="Edit" class="inline-flex items-center px-4 py-1 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-md transition">
                Edit
            </a>
            <a asp-controller="Auth" asp-action="ChangePassword" class="inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-lg">
                Change Password
            </a>
            <a asp-controller="Fine" asp-action="MyFines" class="inline-flex items-center px-4 py-2 bg-yellow-600 hover:bg-yellow-700 text-white text-sm font-medium rounded-lg">
                View My Fines
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-300 text-green-800 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">@TempData["SuccessMessage"]</span>
            <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3" data-dismiss="alert" aria-label="Close">
                <svg class="fill-current h-6 w-6 text-green-800" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                    <title>Close</title>
                    <path d="M14.348 5.652a1 1 0 10-1.414-1.414L10 7.172 7.066 4.238a1 1 0 00-1.414 1.414L8.586 10l-2.934 2.934a1 1 0 001.414 1.414L10 12.828l2.934 2.934a1 1 0 001.414-1.414L11.414 10l2.934-2.934z" />
                </svg>
            </button>
        </div>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <div class="bg-blue-100 border border-blue-300 text-blue-800 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">@TempData["InfoMessage"]</span>
            <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3" data-dismiss="alert" aria-label="Close">
                <svg class="fill-current h-6 w-6 text-blue-800" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                    <title>Close</title>
                    <path d="M14.348 5.652a1 1 0 10-1.414-1.414L10 7.172 7.066 4.238a1 1 0 00-1.414 1.414L8.586 10l-2.934 2.934a1 1 0 001.414 1.414L10 12.828l2.934 2.934a1 1 0 001.414-1.414L11.414 10l2.934-2.934z" />
                </svg>
            </button>
        </div>
    }

    <div class="overflow-hidden w-full overflow-x-auto rounded-radius border border-outline dark:border-outline-dark">
        <div class="px-6 py-4  flex justify-between items-center">
            <h5 class="text-lg font-medium ">Personal Information</h5>
        </div>
        <div class="p-6 space-y-4 bg-surface-alt dark:bg-surface-dark-alt border border-outline dark:border-outline-dark rounded-radius">
            <div class="flex">
                <div class="w-1/3 font-medium">Full Name:</div>
                <div class="w-2/3">@Model.FullName</div>
            </div>
            <div class="flex items-center">
                <div class="w-1/3 font-medium">Email Address:</div>
                <div class="w-2/3">
                    @Model.Email
                    @if (!string.IsNullOrEmpty(Model.PendingEmail))
                    {
                        <span class="ml-2 inline-block bg-yellow-100 text-yellow-800 text-xs font-semibold px-2 py-1 rounded">
                            Pending verification: @Model.PendingEmail
                        </span>
                    }
                </div>
            </div>
            <div class="flex">
                <div class="w-1/3 font-medium">Phone Number:</div>
                <div class="w-2/3">
                    @(string.IsNullOrEmpty(Model.Phone) ? "Not provided" : Model.Phone)
                </div>
            </div>
            <div class="flex">
                <div class="w-1/3 font-medium">Address:</div>
                <div class="w-2/3">
                    @if (string.IsNullOrEmpty(Model.Address))
                    {
                        <span>Not provided</span>
                    }
                    else
                    {
                        <span>@Model.Address</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
