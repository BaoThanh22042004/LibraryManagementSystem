@model Application.DTOs.ChangePasswordDto
<!--
    Change Password View
    Allows user to change their password.
    Related to UC004: Change Password
-->
<h2>Change Password</h2>
<form asp-action="ChangePassword" method="post">
    <div>
        <label asp-for="CurrentPassword"/>
        <input asp-for="CurrentPassword" type="password" />
        <span asp-validation-for="CurrentPassword"></span>
    </div>
    <div>
        <label asp-for="NewPassword" />
        <input asp-for="NewPassword" type="password" />
        <span asp-validation-for="NewPassword"></span>
    </div>
    <div>
        <label asp-for="ConfirmNewPassword" />
        <input asp-for="ConfirmNewPassword" type="password" />
        <span asp-validation-for="ConfirmNewPassword"></span>
    </div>
    <button type="submit">Change Password</button>
</form>
<a asp-action="Index">Back to Profile</a> 