@{
    ViewData["Title"] = "Password Reset Complete";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Password Reset Successful</h4>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="bi bi-check-circle" style="font-size: 4rem; color: #28a745;"></i>
                </div>
                
                <h5 class="card-title text-center">Your Password Has Been Reset</h5>
                
                <p class="card-text">
                    Your password has been successfully reset. You can now log in with your new password.
                </p>
                
                <hr />
                
                <div class="text-center">
                    <a asp-action="Login" class="btn btn-primary">Go to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>