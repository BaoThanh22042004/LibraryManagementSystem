@model ResetPasswordRequest
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="min-h-screen flex items-center justify-center from-gray-100 to-gray-200 py-8 px-4 sm:px-6 animate-fade-in">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-xl p-6 sm:p-8 transform transition duration-300 hover:-translate-y-2">
        <div class="flex items-center mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16" class="w-8 h-8 text-emerald-600 mr-2 transition-colors duration-300 hover:text-emerald-700">
                <path d="M8 0a2 2 0 0 1 2 2v1h2.5A1.5 1.5 0 0 1 14 4.5v7A1.5 1.5 0 0 1 12.5 13H3.5A1.5 1.5 0 0 1 2 11.5v-7A1.5 1.5 0 0 1 3.5 2H6V1a2 2 0 0 1 2-1zm0 1a1 1 0 0 0-1 1v1h2V2a1 1 0 0 0-1-1z" />
            </svg>
            <span class="text-3xl font-extrabold text-gray-900 tracking-tight">LibraryHub</span>
        </div>
        <h5 class="text-xl font-semibold mb-6 text-gray-800">Forgot your password?</h5>
        <p class="mb-6 text-gray-600 text-sm">Enter your email address, and we’ll send you a secure link to reset your password.</p>
        <form asp-action="ForgotPassword" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-3" role="alert"></div>
            <div class="mb-6">
                <label asp-for="Email" class="block text-gray-700 mb-2 font-medium">Email Address</label>
                <input asp-for="Email" class="block w-full px-5 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-gray-900 placeholder-gray-400 text-lg transition duration-200" placeholder="Enter your email address" />
                <span asp-validation-for="Email" class="text-red-600 text-xs mt-1" role="alert"></span>
            </div>
            <button type="submit" class="w-full bg-emerald-600 hover:bg-emerald-700 text-white font-bold py-3 rounded-xl text-lg transition duration-200 shadow-md hover:shadow-lg">Send Reset Link</button>
        </form>
        <div class="mt-6 text-center">
            <a asp-action="Login" class="text-emerald-600 hover:text-emerald-700 font-medium text-sm transition duration-200">Back to Login</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}