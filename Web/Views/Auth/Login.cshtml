@model LoginRequest
@{
    ViewData["Title"] = "Login";
}

<div class="min-h-screen flex items-center justify-center py-8">
    <div class="w-full max-w-4xl bg-white rounded-xl shadow-lg overflow-hidden flex flex-col md:flex-row">
        <div class="hidden md:block md:w-1/2">
            <img src="https://images.unsplash.com/photo-1543002588-bfa74002ed7e?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                 alt="Library Image" class="object-cover h-full w-full" />
        </div>
        <div class="w-full md:w-1/2 flex items-center">
            <div class="p-8 w-full">
                <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-3"></div>

                    <div class="flex items-center mb-6 pb-1">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16" class="w-8 h-8 text-blue-600 mr-2">
                            <path d="M8 0a2 2 0 0 1 2 2v1h2.5A1.5 1.5 0 0 1 14 4.5v7A1.5 1.5 0 0 1 12.5 13H3.5A1.5 1.5 0 0 1 2 11.5v-7A1.5 1.5 0 0 1 3.5 2H6V1a2 2 0 0 1 2-1zm0 1a1 1 0 0 0-1 1v1h2V2a1 1 0 0 0-1-1z" />
                        </svg>
                        <span class="text-2xl font-bold text-gray-800">LibraryHub</span>
                    </div>

                    <h5 class="text-lg font-medium mb-6 text-gray-700">Sign into your account</h5>

                    <div class="mb-4">
                        <label asp-for="Email" class="block text-gray-700 mb-1 font-medium"></label>
                        <input asp-for="Email" class="block w-full px-4 py-2 border text-black border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none" placeholder="Enter your email address" />
                        <span asp-validation-for="Email" class="text-red-600 text-xs"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Password" class="block text-gray-700 mb-1 font-medium"></label>
                        <input asp-for="Password" type="password" class="block w-full px-4 py-2 text-black border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-red-600 text-xs"></span>
                    </div>

                    <div class="flex items-center mb-4">
                        <input asp-for="RememberMe" class="mr-2 rounded text-black border-gray-300 focus:ring-blue-400" />
                        <label asp-for="RememberMe" class="text-gray-700">Remember me</label>
                    </div>

                    <div class="mb-6">
                        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-lg transition duration-200">Login</button>
                    </div>

                    <div class="flex flex-col md:flex-row md:justify-between items-center text-sm">
                        <a asp-action="ForgotPassword" class="text-blue-600 hover:underline mb-2 md:mb-0">Forgot password?</a>
                        <p class="text-gray-600 mb-2 md:mb-0">
                            Don't have an account?
                            <a asp-action="Register" class="text-blue-600 hover:underline">Register here</a>
                        </p>
                    </div>
                    <div class="flex flex-col md:flex-row md:justify-between items-center mt-4 text-xs text-gray-400">
                        <a href="#" class="hover:underline">Terms of use</a>
                        <a href="#" class="hover:underline md:ml-4">Privacy policy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}