@model ChangePasswordRequest
@{
    ViewData["Title"] = "Change Password";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="row">
                <div class="col-md-12 mb-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-controller="Profile" asp-action="Index" class="inline-flex items-center px-3 py-1.5 border border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white text-sm rounded-md transition">← Back to Profile</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                
                <form asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <fieldset class="border border-outline rounded-radius p-4 mb-4">
                        <legend class="px-2 text-sm font-medium text-on-surface">Current Password</legend>

                        <div class="relative">
                            <input asp-for="CurrentPassword"
                                   type="password"
                                   placeholder="Enter your current password"
                                   class="w-full pr-10 rounded-radius border border-outline bg-surface-alt px-3 py-2 text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-primary" />
                            <button type="button"
                                    class="absolute inset-y-0 right-0 px-3 text-on-surface"
                                    onclick="togglePasswordVisibility(this)">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>

                        <span asp-validation-for="CurrentPassword" class="text-sm text-red-600 mt-1 block"></span>
                    </fieldset>

                    <fieldset class="border border-outline rounded-radius p-4 mb-4">
                        <legend class="px-2 text-sm font-medium text-on-surface">New Password</legend>

                        <div class="relative">
                            <input asp-for="NewPassword"
                                   type="password"
                                   placeholder="Enter your new password"
                                   class="w-full pr-10 rounded-radius border border-outline bg-surface-alt px-3 py-2 text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-primary" />
                            <button type="button"
                                    class="absolute inset-y-0 right-0 px-3 text-on-surface"
                                    onclick="togglePasswordVisibility(this)">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>

                        <p class="text-gray-400 text-xs text-muted mt-1">
                            Password must be at least 8 characters long and contain a mix of letters, numbers, and special characters.
                        </p>

                        <span asp-validation-for="NewPassword" class="text-sm text-red-600 mt-1 block"></span>
                    </fieldset>
                    
                    <fieldset class="border border-outline rounded-radius p-4 mb-4">
                        <legend class="px-2 text-sm font-medium text-on-surface">Confirm New Password</legend>

                        <div class="relative">
                            <input asp-for="ConfirmPassword"
                                   type="password"
                                   placeholder="Confirm your new password"
                                   class="w-full pr-10 rounded-radius border border-outline bg-surface-alt px-3 py-2 text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-primary" />
                            <button type="button"
                                    class="absolute inset-y-0 right-0 px-3 text-on-surface"
                                    onclick="togglePasswordVisibility(this)">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>

                        <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600 mt-1 block"></span>
                    </fieldset>

                    <div class="pt-4">
                        <button type="submit"
                                class="w-full whitespace-nowrap rounded-radius bg-primary border border-primary px-4 py-2 text-sm font-medium tracking-wide text-on-primary transition hover:opacity-75 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary active:opacity-100 active:outline-offset-0 disabled:opacity-75 disabled:cursor-not-allowed">
                            Change Password
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('.password-toggle').click(function() {
                var targetId = $(this).data('target');
                var passwordInput = $('#' + targetId);
                var icon = $(this).find('i');
                
                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    icon.removeClass('bi-eye').addClass('bi-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    icon.removeClass('bi-eye-slash').addClass('bi-eye');
                }
            });
        });
    </script>
}