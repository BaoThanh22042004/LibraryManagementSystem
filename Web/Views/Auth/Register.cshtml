@model RegisterRequest
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex items-center justify-center py-8">
    <div class="w-full max-w-4xl bg-white rounded-xl shadow-lg overflow-hidden flex flex-col md:flex-row">
        <div class="hidden md:block md:w-1/2">
            <img src="https://images.unsplash.com/photo-1543002588-bfa74002ed7e?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                 alt="Library Image" class="object-cover h-full w-full" />
        </div>
        <div class="w-full md:w-1/2 flex items-center">
            <div class="p-8 w-full">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-3"></div>

                    <div class="flex items-center mb-6 pb-1">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16" class="w-8 h-8 text-green-600 mr-2">
                            <path d="M8 0a2 2 0 0 1 2 2v1h2.5A1.5 1.5 0 0 1 14 4.5v7A1.5 1.5 0 0 1 12.5 13H3.5A1.5 1.5 0 0 1 2 11.5v-7A1.5 1.5 0 0 1 3.5 2H6V1a2 2 0 0 1 2-1zm0 1a1 1 0 0 0-1 1v1h2V2a1 1 0 0 0-1-1z" />
                        </svg>
                        <span class="text-2xl font-bold text-gray-800">LibraryHub</span>
                    </div>

                    <h5 class="text-lg font-medium mb-6 text-gray-700">Create your account</h5>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="FullName" class="block text-gray-700 mb-1 font-medium">Full Name</label>
                            <input asp-for="FullName" class="block w-full md:w-[98%] px-6 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-400 focus:outline-none text-black text-lg" placeholder="Full name" />
                            <span asp-validation-for="FullName" class="text-red-600 text-xs"></span>
                        </div>
                        <div>
                            <label asp-for="Email" class="block text-gray-700 mb-1 font-medium">Email</label>
                            <input asp-for="Email" class="block w-full md:w-[98%] px-6 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-400 focus:outline-none text-black text-lg" placeholder="Email address" />
                            <span asp-validation-for="Email" class="text-red-600 text-xs"></span>
                        </div>
                        <div>
                            <label asp-for="Phone" class="block text-gray-700 mb-1 font-medium">Phone (optional)</label>
                            <input asp-for="Phone" class="block w-full md:w-[98%] px-6 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-400 focus:outline-none text-black text-lg" placeholder="Phone (optional)" />
                            <span asp-validation-for="Phone" class="text-red-600 text-xs"></span>
                        </div>
                        <div>
                            <label asp-for="Address" class="block text-gray-700 mb-1 font-medium">Address (optional)</label>
                            <input asp-for="Address" class="block w-full md:w-[98%] px-6 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-400 focus:outline-none text-black text-lg" placeholder="Address (optional)" />
                            <span asp-validation-for="Address" class="text-red-600 text-xs"></span>
                        </div>
                        <div class="md:col-span-2">
                            <label asp-for="PreferredMembershipNumber" class="block text-gray-700 mb-1 font-medium">Preferred Membership Number (optional)</label>
                            <input asp-for="PreferredMembershipNumber" class="block w-full px-6 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-400 focus:outline-none text-black text-lg" placeholder="Preferred Membership Number (optional)" />
                            <span asp-validation-for="PreferredMembershipNumber" class="text-red-600 text-xs"></span>
                        </div>
                        <div>
                            <label asp-for="Password" class="block text-gray-700 mb-1 font-medium">Password</label>
                            <input asp-for="Password" type="password" class="block w-full md:w-[98%] px-6 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-400 focus:outline-none text-black text-lg" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-red-600 text-xs"></span>
                        </div>
                        <div>
                            <label asp-for="ConfirmPassword" class="block text-gray-700 mb-1 font-medium">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="block w-full md:w-[98%] px-6 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-400 focus:outline-none text-black text-lg" placeholder="Confirm Password" />
                            <span asp-validation-for="ConfirmPassword" class="text-red-600 text-xs"></span>
                        </div>
                    </div>

                    <div class="mt-6">
                        <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 rounded-xl text-lg transition duration-200">Register</button>
                    </div>
                    <p class="mb-2 text-sm text-gray-600">
                        Already have an account?
                        <a asp-action="Login" class="text-green-600 hover:underline">Login here</a>
                    </p>
                    <div class="flex flex-col md:flex-row md:justify-between items-center mt-4 text-xs text-gray-400">
                        <a href="#" class="hover:underline">Terms of use</a>
                        <a href="#" class="hover:underline md:ml-4">Privacy policy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}