@model FulfillReservationRequest

@{
    ViewData["Title"] = "Fulfill Reservation";
}

<div class="mb-6">
    <div class="flex items-center">
        <h1 class="text-3xl font-bold">Fulfill Reservation</h1>
    </div>
</div>

@await Html.PartialAsync("_AlertsPartial")

<div class="bg-white shadow-md rounded-lg overflow-hidden p-6 mb-7">
    <form asp-action="Fulfill" method="post">
        <input type="hidden" asp-for="@Model.ReservationId"/>
        <div class="space-y-6">
            <div>
                <label asp-for="ReservationId" class="block text-gray-700 text-base font-bold mb-2">Reservation Id</label>
                <div class="w-full px-3 py-2 border border-gray-300 rounded-md">@Model.ReservationId</div>
            </div>
            <div>
                <label asp-for="BookCopyId" class="block text-gray-700 text-base font-bold mb-2">Book Copy Id<span class="text-red-600">*</span></label>
                <input asp-for="BookCopyId" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                       placeholder="Enter book copy id">
                <span asp-validation-for="BookCopyId" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="PickupDeadline" class="block text-gray-700 text-base font-bold mb-2">Pickup Deadline</label>
                <input asp-for="PickupDeadline" type="datetime-local" value="@Model.PickupDeadline.ToString()" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                <span asp-validation-for="PickupDeadline" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="FulfillmentNotes" class="block text-gray-700 text-base font-bold mb-2">Notes</label>
                <textarea asp-for="FulfillmentNotes" type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                          placeholder="Enter notes here..."></textarea>
                <span asp-validation-for="FulfillmentNotes" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Submit
                </button>
            </div>
        </div>
    </form>
</div>

<button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
    <a asp-action="Details" asp-route-id="@Model.ReservationId">
        Back to Details
    </a>
</button>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}