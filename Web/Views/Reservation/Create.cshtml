@model Application.DTOs.CreateReservationDto
@{
    ViewData["Title"] = "Create Reservation";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <div class="flex items-center mb-6">
            <a asp-action="Index" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 mr-4">
                <i class="fas fa-arrow-left"></i> Back to Reservations
            </a>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Create Reservation</h1>
        </div>

        <!-- UC022: Reserve Book Form -->
        <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
            <div class="mb-6">
                <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Reservation Information</h2>
                <p class="text-gray-600 dark:text-gray-400">Create a new reservation for a library member. The system will validate member eligibility and book availability.</p>
            </div>

            <form asp-action="Create" method="post" id="reservationForm">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Member Selection -->
                    <div>
                        <label asp-for="MemberId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Member <span class="text-red-500">*</span>
                        </label>
                        <div class="relative">
                            <input asp-for="MemberId" type="number" 
                                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                                   placeholder="Enter member ID" 
                                   required />
                            <button type="button" onclick="searchMember()" 
                                    class="absolute right-2 top-2 text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                        <span asp-validation-for="MemberId" class="text-red-500 text-sm"></span>
                        <div id="memberInfo" class="mt-2 p-3 bg-gray-50 dark:bg-gray-700 rounded-md hidden">
                            <p class="text-sm text-gray-600 dark:text-gray-400" id="memberDetails"></p>
                        </div>
                    </div>

                    <!-- Book Selection -->
                    <div>
                        <label asp-for="BookId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Book <span class="text-red-500">*</span>
                        </label>
                        <div class="relative">
                            <input asp-for="BookId" type="number" 
                                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                                   placeholder="Enter book ID" 
                                   required />
                            <button type="button" onclick="searchBook()" 
                                    class="absolute right-2 top-2 text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                        <span asp-validation-for="BookId" class="text-red-500 text-sm"></span>
                        <div id="bookInfo" class="mt-2 p-3 bg-gray-50 dark:bg-gray-700 rounded-md hidden">
                            <p class="text-sm text-gray-600 dark:text-gray-400" id="bookDetails"></p>
                        </div>
                    </div>
                </div>

                <!-- Availability Check Results -->
                <div id="availabilityCheck" class="mt-6 p-4 rounded-md hidden">
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Book Availability Check</h3>
                    <div id="availabilityResults"></div>
                </div>

                <!-- Form Actions -->
                <div class="mt-8 flex justify-end space-x-4">
                    <a asp-action="Index" 
                       class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded">
                        Cancel
                    </a>
                    <button type="submit" 
                            class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        <i class="fas fa-plus mr-2"></i>Create Reservation
                    </button>
                </div>
            </form>
        </div>

        <!-- UC022 Business Rules Information -->
        <div class="mt-6 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
            <h3 class="text-lg font-medium text-blue-900 dark:text-blue-100 mb-2">
                <i class="fas fa-info-circle mr-2"></i>Reservation Requirements
            </h3>
            <ul class="text-sm text-blue-800 dark:text-blue-200 space-y-1">
                <li>• Member must have active membership status</li>
                <li>• Book must exist in the library catalog</li>
                <li>• All copies of the book must be currently on loan</li>
                <li>• Member must not have an existing active reservation for the same book</li>
                <li>• Member must not exceed maximum active reservations (3)</li>
                <li>• Reservations expire after 30 days if not fulfilled</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search member by ID
        function searchMember() {
            const memberId = document.getElementById('MemberId').value;
            if (!memberId) {
                alert('Please enter a member ID');
                return;
            }

            // This would typically call an API endpoint to get member details
            // For now, we'll show a placeholder
            const memberInfo = document.getElementById('memberInfo');
            const memberDetails = document.getElementById('memberDetails');
            
            memberDetails.innerHTML = `
                <strong>Member #${memberId}</strong><br>
                Status: <span class="font-medium text-green-600">Active</span><br>
                <em>Note: Actual member details would be loaded from the server</em>
            `;
            memberInfo.classList.remove('hidden');
        }

        // Search book by ID
        function searchBook() {
            const bookId = document.getElementById('BookId').value;
            if (!bookId) {
                alert('Please enter a book ID');
                return;
            }

            // This would typically call an API endpoint to get book details and availability
            // For now, we'll show a placeholder
            const bookInfo = document.getElementById('bookInfo');
            const bookDetails = document.getElementById('bookDetails');
            const availabilityCheck = document.getElementById('availabilityCheck');
            const availabilityResults = document.getElementById('availabilityResults');
            
            bookDetails.innerHTML = `
                <strong>Book #${bookId}</strong><br>
                Title: <em>Sample Book Title</em><br>
                Author: <em>Sample Author</em><br>
                Status: <span class="font-medium text-red-600">All copies on loan</span>
            `;
            bookInfo.classList.remove('hidden');

            // Show availability results
            availabilityCheck.classList.remove('hidden');
            availabilityResults.innerHTML = `
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="p-3 rounded-md bg-yellow-100 dark:bg-yellow-900">
                        <p class="font-medium text-yellow-800 dark:text-yellow-200">
                            <i class="fas fa-info-circle mr-2"></i>Reservation Required
                        </p>
                        <p class="text-sm text-yellow-700 dark:text-yellow-300">
                            All copies of this book are currently on loan. A reservation can be created.
                        </p>
                    </div>
                    <div class="p-3 rounded-md bg-gray-100 dark:bg-gray-700">
                        <p class="font-medium text-gray-800 dark:text-gray-200">Queue Information:</p>
                        <ul class="text-sm text-gray-600 dark:text-gray-400">
                            <li>• Current queue position: Would be calculated</li>
                            <li>• Estimated wait time: Depends on returns</li>
                            <li>• Notification: Will be sent when available</li>
                        </ul>
                    </div>
                </div>
            `;
        }

        // Form validation
        document.getElementById('reservationForm').addEventListener('submit', function(e) {
            const memberId = document.getElementById('MemberId').value;
            const bookId = document.getElementById('BookId').value;

            if (!memberId || !bookId) {
                e.preventDefault();
                alert('Please fill in all required fields');
                return;
            }
        });
    </script>
} 