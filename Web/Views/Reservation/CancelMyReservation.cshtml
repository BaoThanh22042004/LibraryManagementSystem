@model CancelReservationRequest

@{
    ViewData["Title"] = "Cancel Reservation";
}

<div class="mb-6">
    <div class="flex items-center">
        <h1 class="text-3xl font-bold">Cancel Reservation</h1>
    </div>
</div>

@await Html.PartialAsync("_AlertsPartial")

<div class="bg-white shadow-md rounded-lg overflow-hidden p-6 mb-7">
    <form asp-action="CancelMyReservation" method="post">
        <input type="hidden" asp-for="@Model.ReservationId" />
        <div class="space-y-6">
            <div>
                <label asp-for="ReservationId" class="block text-gray-700 text-base font-bold mb-2">Reservation Id</label>
                <div class="w-full px-3 py-2 border border-gray-300 rounded-md">@Model.ReservationId</div>
            </div>
            <div>
                <label asp-for="CancellationReason" class="block text-gray-700 text-base font-bold mb-2">Reasons</label>
                <textarea asp-for="CancellationReason" type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                          placeholder="Enter cancellation reason here..."></textarea>
                <span asp-validation-for="CancellationReason" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Submit
                </button>
            </div>
        </div>
    </form>
</div>

<button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
    <a asp-action="MyReservationDetails" asp-route-id="@Model.ReservationId">
        Back to Details
    </a>
</button>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
