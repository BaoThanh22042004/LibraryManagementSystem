@model UserDetailsDto
@{
    ViewData["Title"] = "Delete User";
    var canDelete = ViewData["CanDelete"] as bool? ?? true;
    var deletionBlockedReason = ViewData["DeletionBlockedReason"] as string ?? string.Empty;
}

<div class="container">
    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Delete User</h2>
                <div>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left"></i> Back to Details
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-list"></i> Back to List
                    </a>
                </div>
            </div>
            <hr />
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">Confirm Deletion</h5>
                </div>
                <div class="card-body">
                    @if (!canDelete)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>User cannot be deleted!</strong> @deletionBlockedReason
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Warning:</strong> This action cannot be undone. Are you sure you want to delete this user?
                        </div>
                    }

                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h6 class="card-title mb-0">User Information</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">User ID:</dt>
                                <dd class="col-sm-9">@Model.Id</dd>

                                <dt class="col-sm-3">Full Name:</dt>
                                <dd class="col-sm-9">@Model.FullName</dd>

                                <dt class="col-sm-3">Email:</dt>
                                <dd class="col-sm-9">@Model.Email</dd>

                                <dt class="col-sm-3">Role:</dt>
                                <dd class="col-sm-9">
                                    @switch (Model.Role)
                                    {
                                        case UserRole.Admin:
                                            <span class="badge bg-danger">Administrator</span>
                                            break;
                                        case UserRole.Librarian:
                                            <span class="badge bg-info">Librarian</span>
                                            break;
                                        case UserRole.Member:
                                            <span class="badge bg-success">Member</span>
                                            break;
                                    }
                                </dd>

                                <dt class="col-sm-3">Status:</dt>
                                <dd class="col-sm-9">
                                    @switch (Model.Status)
                                    {
                                        case UserStatus.Active:
                                            <span class="badge bg-success">Active</span>
                                            break;
                                        case UserStatus.Suspended:
                                            <span class="badge bg-warning text-dark">Suspended</span>
                                            break;
                                        case UserStatus.Inactive:
                                            <span class="badge bg-secondary">Inactive</span>
                                            break;
                                    }
                                </dd>

                                @if (Model.Role == UserRole.Member && Model.MemberDetails != null)
                                {
                                    <dt class="col-sm-3">Membership #:</dt>
                                    <dd class="col-sm-9">@Model.MemberDetails.MembershipNumber</dd>
                                }
                                else if (Model.Role == UserRole.Librarian && Model.LibrarianDetails != null)
                                {
                                    <dt class="col-sm-3">Employee ID:</dt>
                                    <dd class="col-sm-9">@Model.LibrarianDetails.EmployeeId</dd>
                                }

                                <dt class="col-sm-3">Created:</dt>
                                <dd class="col-sm-9">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (canDelete)
                    {
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this user? This action cannot be undone.');">
                                    <i class="bi bi-trash-fill"></i> Delete User Permanently
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>