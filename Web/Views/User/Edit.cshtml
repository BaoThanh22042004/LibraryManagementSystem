@model UpdateUserRequest
@{
    ViewData["Title"] = "Edit User";
}

<div class="max-w-4xl mx-auto px-4 py-8">
    <div class="flex justify-between mb-6">
        <div class="space-x-4">
            <a asp-action="Details" asp-route-id="@Model.Id" class="inline-flex items-center px-3 py-1.5 border border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white text-sm rounded-md transition">
                ← Back to Details
            </a>
            <a asp-action="Index" class="inline-flex items-center px-3 py-1.5 border border-gray-500 hover:bg-gray-100 text-sm rounded-md transition">
                ← Back to List   
            </a>
        </div>
    </div>

    <div class="p-6 mb-6 overflow-hidden border border-outline bg-surface-alt text-on-surface dark:border-outline-dark dark:bg-surface-dark-alt dark:text-on-surface-dark rounded-radius">
        <h3 class="text-3xl text-center font-bold">Edit User</h3>

        <form asp-action="Edit" method="post" class="space-y-6">
            <input type="hidden" asp-for="Id" />
            <fieldset class="border border-outline rounded-radius p-4">
                <legend class="text-sm font-medium">Full Name</legend>
                <input asp-for="FullName"
                       class="w-full rounded-radius border border-outline bg-surface-alt px-2 py-2 text-sm focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary disabled:cursor-not-allowed disabled:opacity-75 dark:border-outline-dark dark:bg-surface-dark-alt/50 dark:focus-visible:outline-primary-dark"
                       placeholder="Enter full name" />
                <span asp-validation-for="FullName" class="text-sm text-red-600 mt-1 block"></span>
            </fieldset>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <fieldset class="border border-outline rounded-radius p-4">
                    <legend class="text-sm font-medium">Email</legend>
                    <input asp-for="Email"
                           type="email"
                           class="w-full rounded-radius border border-outline bg-surface-alt px-2 py-2 text-sm focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary disabled:cursor-not-allowed disabled:opacity-75 dark:border-outline-dark dark:bg-surface-dark-alt/50 dark:focus-visible:outline-primary-dark"
                           placeholder="Enter email" />
                    <span asp-validation-for="Email" class="text-sm text-red-600 mt-1 block"></span>
                </fieldset>

                <fieldset class="border border-outline rounded-radius p-4">
                    <legend class="text-sm font-medium">Account Status</legend>
                    <select asp-for="Status"
                            id="statusSelect"
                            data-initial-value="@Model.Status"
                            class="w-full rounded-radius border border-outline bg-surface-alt px-2 py-2 text-sm focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary disabled:cursor-not-allowed disabled:opacity-75 dark:border-outline-dark dark:bg-surface-dark-alt/50 dark:focus-visible:outline-primary-dark">
                        <option value="@UserStatus.Active">Active</option>
                        <option value="@UserStatus.Suspended">Suspended</option>
                        <option value="@UserStatus.Inactive">Inactive</option>
                    </select>
                    <span asp-validation-for="Status" class="text-sm text-red-600 mt-1 block"></span>
                </fieldset>

                <fieldset id="statusReasonContainer" class="border border-outline rounded-radius p-4 mt-4 hidden">
                    <legend class="text-sm font-medium">Reason for Status Change</legend>
                    <textarea asp-for="StatusChangeReason"
                              class="block w-full rounded-radius border border-outline bg-surface-alt px-3 py-2 text-sm shadow-sm focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary disabled:cursor-not-allowed disabled:opacity-75 dark:border-outline-dark dark:bg-surface-dark-alt/50 dark:focus-visible:outline-primary-dark"
                              rows="2"
                              placeholder="Provide reason for status change"></textarea>
                    <span asp-validation-for="StatusChangeReason" class="text-sm text-red-600 mt-1 block"></span>
                </fieldset>

                <fieldset class="border border-outline rounded-radius p-4">
                    <legend class="text-sm font-medium">Phone Number</legend>
                    <input asp-for="Phone"
                           class="block w-full rounded-radius border border-outline bg-surface-alt px-3 py-2 text-sm shadow-sm focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary disabled:cursor-not-allowed disabled:opacity-75 dark:border-outline-dark dark:bg-surface-dark-alt/50 dark:focus-visible:outline-primary-dark"
                           placeholder="Enter phone number" />
                    <span asp-validation-for="Phone" class="text-sm text-red-600 mt-1 block"></span>
                </fieldset>

                <fieldset class="border border-outline rounded-radius p-4">
                    <legend class="text-sm font-medium">Address</legend>
                    <textarea asp-for="Address"
                              class="block w-full rounded-radius border border-outline bg-surface-alt px-3 py-2 text-sm shadow-sm focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary disabled:cursor-not-allowed disabled:opacity-75 dark:border-outline-dark dark:bg-surface-dark-alt/50 dark:focus-visible:outline-primary-dark"
                              rows="3"
                              placeholder="Enter address"></textarea>
                    <span asp-validation-for="Address" class="text-sm text-red-600 mt-1 block"></span>
                </fieldset>
            </div>
            <div class="pt-6 flex justify-center">
                <button type="submit"
                        class="w-full md:w-auto whitespace-nowrap rounded-radius bg-primary border border-primary px-6 py-2 text-sm font-medium tracking-wide text-on-primary transition hover:opacity-75 text-center focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary active:opacity-100 active:outline-offset-0 disabled:opacity-75 disabled:cursor-not-allowed dark:bg-primary-dark dark:border-primary-dark dark:text-on-primary-dark dark:focus-visible:outline-primary-dark">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const statusSelect = document.getElementById('statusSelect');
            const reasonContainer = document.getElementById('statusReasonContainer');
            const initialValue = statusSelect.dataset.initialValue;

            function toggleReasonVisibility() {
                if (statusSelect.value !== initialValue) {
                    reasonContainer.classList.remove('hidden');
                } else {
                    reasonContainer.classList.add('hidden');
                }
            }

            // Initial check (in case value already changed from model binding)
            toggleReasonVisibility();

            // Attach change event
            statusSelect.addEventListener('change', toggleReasonVisibility);
        });
    </script>
}
