@model Application.DTOs.UserDto
<!--
    User Details View
    Displays detailed information for a user.
    Related to UC007: View User Info
-->
<h2>User Details</h2>
<div>
    <strong>FullName:</strong> @Model.FullName
</div>
<div>
    <strong>Email:</strong> @Model.Email
</div>
<div>
    <strong>Role:</strong> @Model.Role
</div>
<div>
    <strong>Status:</strong> @Model.Status
</div>
<div>
    <strong>Phone:</strong> @Model.Phone
</div>
<div>
    <strong>Address:</strong> @Model.Address
</div>
<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
<a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
<a asp-action="Index">Back to List</a> 