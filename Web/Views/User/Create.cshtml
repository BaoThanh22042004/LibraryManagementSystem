@model Web.ViewModels.UserViewModel
<!--
    Create User View
    Allows Admin/Librarian to create a new user.
    Related to UC001: Create User
-->
<h2>Create User</h2>
<form asp-action="Create" method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Role"></label>
        <input asp-for="Role" />
        <span asp-validation-for="Role"></span>
    </div>
    <div>
        <label asp-for="Status"></label>
        <input asp-for="Status" />
        <span asp-validation-for="Status"></span>
    </div>
    <div>
        <label asp-for="MembershipNumber"></label>
        <input asp-for="MembershipNumber" />
        <span asp-validation-for="MembershipNumber"></span>
    </div>
    <div>
        <label asp-for="MembershipStatus"></label>
        <input asp-for="MembershipStatus" />
        <span asp-validation-for="MembershipStatus"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="Phone"></label>
        <input asp-for="Phone" />
        <span asp-validation-for="Phone"></span>
    </div>
    <div>
        <label asp-for="Address"></label>
        <input asp-for="Address" />
        <span asp-validation-for="Address"></span>
    </div>
    <button type="submit">Create</button>
</form>
