@model Application.DTOs.BookDetailsDto
@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mx-auto">
    <div class="bg-surface-alt dark:bg-surface-dark-alt border border-outline dark:border-outline-dark rounded-radius shadow-md overflow-hidden">
        <div class="bg-red-600 dark:bg-red-700 text-white p-4">
            <h1 class="text-xl font-bold">Delete Book</h1>
        </div>
        <div class="p-6">
            <div class="mb-6">
                <div class="flex items-center mb-4">
                    <svg class="w-8 h-8 text-red-600 dark:text-red-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
                    </svg>
                    <h2 class="text-lg font-semibold text-on-surface-strong dark:text-on-surface-dark-strong">Are you sure you want to delete this book?</h2>
                </div>
                <p class="text-on-surface dark:text-on-surface-dark mb-4">
                    This action cannot be undone. All copies of this book will also be permanently removed from the system.
                </p>
            </div>

            <!-- Book Information -->
            <div class="bg-surface dark:bg-surface-dark border border-outline dark:border-outline-dark rounded-radius p-6 mb-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Book Cover -->
                    <div>
                        @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                        {
                            <img src="@Model.CoverImageUrl" alt="@Model.Title" class="w-full max-w-xs rounded-radius shadow-md" />
                        }
                        else
                        {
                            <div class="w-full max-w-xs aspect-[3/4] bg-surface-alt dark:bg-surface-dark-alt rounded-radius flex items-center justify-center">
                                <svg class="w-16 h-16 text-on-surface dark:text-on-surface-dark opacity-30" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                        }
                    </div>

                    <!-- Book Details -->
                    <div>
                        <h3 class="text-xl font-bold text-on-surface-strong dark:text-on-surface-dark-strong mb-2">@Model.Title</h3>
                        <p class="text-lg text-on-surface dark:text-on-surface-dark mb-4">by @Model.Author</p>
                        
                        <div class="space-y-2 mb-4">
                            @if (!string.IsNullOrEmpty(Model.ISBN))
                            {
                                <div>
                                    <span class="text-sm font-medium text-on-surface dark:text-on-surface-dark">ISBN:</span>
                                    <span class="text-on-surface-strong dark:text-on-surface-dark-strong ml-2">@Model.ISBN</span>
                                </div>
                            }
                            
                            @if (!string.IsNullOrEmpty(Model.Publisher))
                            {
                                <div>
                                    <span class="text-sm font-medium text-on-surface dark:text-on-surface-dark">Publisher:</span>
                                    <span class="text-on-surface-strong dark:text-on-surface-dark-strong ml-2">@Model.Publisher</span>
                                </div>
                            }
                            
                            @if (Model.PublicationDate.HasValue)
                            {
                                <div>
                                    <span class="text-sm font-medium text-on-surface dark:text-on-surface-dark">Publication Date:</span>
                                    <span class="text-on-surface-strong dark:text-on-surface-dark-strong ml-2">@Model.PublicationDate.Value.ToString("MMMM yyyy")</span>
                                </div>
                            }
                            
                            <div>
                                <span class="text-sm font-medium text-on-surface dark:text-on-surface-dark">Status:</span>
                                <span class="text-on-surface-strong dark:text-on-surface-dark-strong ml-2">@Model.Status</span>
                            </div>
                        </div>

                        <!-- Categories -->
                        @if (Model.CategoryDetails.Any())
                        {
                            <div class="mb-4">
                                <span class="text-sm font-medium text-on-surface dark:text-on-surface-dark">Categories:</span>
                                <div class="flex flex-wrap gap-1 mt-1">
                                    @foreach (var category in Model.CategoryDetails)
                                    {
                                        <span class="text-xs bg-primary/10 dark:bg-primary-dark/10 text-primary dark:text-primary-dark px-2 py-1 rounded-full">
                                            @category.Name
                                        </span>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Copy Information -->
                        <div class="bg-surface-alt dark:bg-surface-dark-alt rounded-radius p-3">
                            <div class="flex justify-between items-center">
                                <span class="text-sm font-medium text-on-surface dark:text-on-surface-dark">Total Copies:</span>
                                <span class="font-semibold text-on-surface-strong dark:text-on-surface-dark-strong">@Model.CopiesCount</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-sm font-medium text-on-surface dark:text-on-surface-dark">Available Copies:</span>
                                <span class="font-semibold @(Model.AvailableCopiesCount > 0 ? "text-green-600 dark:text-green-400" : "text-red-600 dark:text-red-400")">
                                    @Model.AvailableCopiesCount
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Warning Messages -->
            <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-radius p-4 mb-6">
                <div class="flex">
                    <svg class="w-5 h-5 text-yellow-400 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                    <div>
                        <h3 class="text-sm font-medium text-yellow-800 dark:text-yellow-200">Important Information</h3>
                        <div class="mt-2 text-sm text-yellow-700 dark:text-yellow-300">
                            <ul class="list-disc list-inside space-y-1">
                                <li>This action will permanently delete the book and all its copies</li>
                                <li>Historical loan records will be preserved for audit purposes</li>
                                <li>Any active loans or reservations will prevent deletion</li>
                                <li>This action cannot be undone</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-between">
                <a asp-action="Index" class="rounded-radius border border-outline dark:border-outline-dark px-4 py-2 text-sm font-medium hover:bg-surface-alt dark:hover:bg-surface-dark-alt text-on-surface-strong dark:text-on-surface-dark-strong">
                    Cancel
                </a>
                <form asp-action="Delete" method="post" class="inline">
                    <button type="submit" class="rounded-radius bg-red-600 dark:bg-red-700 text-white px-6 py-2 text-sm font-medium hover:bg-red-700 dark:hover:bg-red-800 cursor-pointer" 
                            onclick="return confirm('This action cannot be undone. Are you absolutely sure you want to delete this book and all its copies?')">
                        Delete Book
                    </button>
                </form>
            </div>
        </div>
    </div>
</div> 