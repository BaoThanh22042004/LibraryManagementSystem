@model Application.DTOs.CategoryDetailsDto
@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mx-auto">
    <div class="bg-surface-alt dark:bg-surface-dark-alt border border-danger rounded-radius shadow-md overflow-hidden">
        <div class="bg-danger text-on-danger p-4">
            <h1 class="text-xl font-bold">Delete Category</h1>
        </div>
        <div class="p-6">
            <div class="bg-warning/10 border-l-4 border-warning p-4 mb-6">
                <h4 class="text-warning font-bold">Warning!</h4>
                <p class="text-on-surface dark:text-on-surface-dark">Are you sure you want to delete this category? This action cannot be undone.</p>
                <p class="text-on-surface dark:text-on-surface-dark mt-2"><strong>Note:</strong> This will not delete books associated with this category.</p>
            </div>
            
            <div class="flex flex-col md:flex-row gap-8">
                <div class="w-full md:w-1/3">
                    @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                    {
                        <img src="@Model.CoverImageUrl" class="w-full h-auto rounded-radius" alt="@Model.Name">
                    }
                    else
                    {
                        <div class="w-full h-60 flex items-center justify-center bg-gray-200 rounded-radius">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                            </svg>
                        </div>
                    }
                </div>
                <div class="w-full md:w-2/3">
                    <dl class="grid grid-cols-1 md:grid-cols-3 gap-4">                        <dt class="font-semibold text-on-surface-strong dark:text-on-surface-dark-strong">Name</dt>
                        <dd class="md:col-span-2 text-on-surface dark:text-on-surface-dark">@Model.Name</dd>

                        <dt class="font-semibold text-on-surface-strong dark:text-on-surface-dark-strong">Description</dt>
                        <dd class="md:col-span-2 text-on-surface dark:text-on-surface-dark">@(string.IsNullOrEmpty(Model.Description) ? "N/A" : Model.Description)</dd>

                        <dt class="font-semibold text-on-surface-strong dark:text-on-surface-dark-strong">Books Count</dt>
                        <dd class="md:col-span-2 text-on-surface dark:text-on-surface-dark">@Model.BooksCount</dd>
                    </dl>
                </div>
            </div>
              <form asp-action="Delete" method="post" class="mt-6">
                <div class="flex justify-between">
                    <a asp-action="Index" class="rounded-radius border border-outline dark:border-outline-dark px-4 py-2 text-sm font-medium hover:bg-surface-alt dark:hover:bg-surface-dark-alt text-on-surface-strong dark:text-on-surface-dark-strong">Back to List</a>
                    <button type="submit" class="rounded-radius bg-danger border border-danger px-4 py-2 text-center text-sm font-medium tracking-wide text-on-danger hover:opacity-75">Delete Category</button>
                </div>
            </form>
        </div>
    </div>
      @if (Model.Books.Count > 0)
    {
        <div class="bg-surface-alt dark:bg-surface-dark-alt border border-outline dark:border-outline-dark rounded-radius shadow-md overflow-hidden mt-8">
            <div class="bg-info text-on-info p-4">
                <h2 class="text-lg font-bold">Books in this Category</h2>
            </div>
            <div class="p-6">
                <p class="mb-4 text-on-surface dark:text-on-surface-dark">The following books are currently in this category. They will not be deleted, but they will no longer be associated with this category.</p>
                
                <ul class="border border-outline dark:border-outline-dark rounded-radius overflow-hidden divide-y divide-outline dark:divide-outline-dark">
                    @foreach (var book in Model.Books.Take(5))
                    {
                        <li class="p-3 flex items-center gap-2">
                            @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                            {
                                <img src="@book.CoverImageUrl" alt="@book.Title" class="w-8 h-10 object-cover rounded">
                            }
                            else
                            {
                                <div class="w-8 h-10 flex items-center justify-center bg-gray-200 rounded">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                                    </svg>
                                </div>
                            }
                            <span>@book.Title (@book.Author)</span>
                        </li>
                    }
                      @if (Model.Books.Count > 5)
                    {
                        <li class="p-3 text-center text-on-surface dark:text-on-surface-dark">
                            And @(Model.Books.Count - 5) more...
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
</div>